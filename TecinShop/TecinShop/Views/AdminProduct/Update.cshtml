@model EntityLayer.Entities.Product
@{
    ViewBag.Title = "Update";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })

                <div class="form-group">
                    <label>Ad</label>
                    <input type="text" style="font-size:large" class="form-control" name="Name" value="@Model.Name" />
                    @Html.ValidationMessageFor(x => x.Name, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" style="font-size:large" class="form-control" name="Description" value="@Model.Description" />
                    @Html.ValidationMessageFor(x => x.Description, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Aktif Resim</label>
                    <img src="~/Content/Image/@Model.Image" style="font-size:large" width="80" height="80"/>
                </div>
                <br />
                <div class="form-group">
                    <label>Resim</label>
                    <input type="file" class="form-control" style="font-size:large" name="File" value="@Model.Image" />
                    @Html.ValidationMessageFor(x => x.Image, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Fiyat</label>
                    <input type="text" style="font-size:large" class="form-control" name="Price" value="@Model.Price" />
                    @Html.ValidationMessageFor(x => x.Price, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Stok</label>
                    <input type="text" style="font-size:large" class="form-control" name="Stock" value="@Model.Stock" />
                    @Html.ValidationMessageFor(x => x.Stock, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Popüler</label>
                    @Html.EditorFor(x => x.Popular)
                    @Html.ValidationMessageFor(x => x.Popular, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Onay</label>
                    @Html.EditorFor(x => x.IsApproved)
                    @Html.ValidationMessageFor(x => x.IsApproved, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Kategori</label>
                    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.ktgr, new { @class = "form-control", @style="font-size:large" })
                    @Html.ValidationMessageFor(x => x.CategoryId, "", new { @style = "color:red" })
                </div>
                <br />
                <button class="btn btn-primary" style="font-size:large" type="submit">Güncelle</button>
                <a href="/AdminProduct/Index" style="font-size:large" class="btn btn-primary">ürün Listesi</a>
            </form>
        </div>
    </div>
</div>
