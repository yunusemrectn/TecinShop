@using PagedList;
@using PagedList.Mvc;
@using TecinShop.SeoUrl.BlogMvc.Helpers
@model IPagedList<EntityLayer.Entities.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<section id="slider">
    <!--slider-->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#slider-carousel" data-slide-to="1"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="item active" style="width:100%; background-color:white; padding:10px;">
                            <img src="~/eshop/images/home/banner3.jpg"/>
                        </div>
                        <div class="item " style="width:100%; background-color:white; padding:10px;">
                            <img src="~/eshop/images/home/banner1.jpg"/>
                        </div>
                    </div>
                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section><!--/slider-->

<section>
    <div class="container">
        <div class="row">
            @Html.Action("CategoryList", "Category")
            
            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">ÜRÜNLERİMİZ</h2>
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">

                                        <a href="/Product/ProductDetails/@item.Id/@(Seo.SeoUrl(item.Name))"><img src="~/Content/Image/@item.Image"  width="50" height="250" alt="" /></a>
                                        <h2>@item.Price TL</h2>
                                        <p>@item.Name</p>
                                        <a href="/Product/ProductDetails/@item.Id/@(Seo.SeoUrl(item.Name))" class="btn btn-default add-to-cart">Ürün Detay</a>
                                    </div>

                                </div>

                            </div>
                        </div>
                    }

                </div><!--features_items-->
                <div style="display : flex; justify-content: center;">
                    @Html.PagedListPager(Model, sayfa => Url.Action("Index", new { sayfa }), PagedListRenderOptions.Classic)
                </div>
                <div class="carousel-inner">
                    <div class="item active" style="width:100%; background-color:white; padding:10px;">
                        <a href="/Category/Details/2"><img src="~/eshop/images/home/banner4.jpg" /></a>
                    </div>
                </div>
                @Html.Action("PopularProduct", "Product")

            </div>
        </div>
    </div>
</section>

